<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carpintería - Productos</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/bootstrap.min.css">
</head>
<body>
  <header class="bg-dark text-white text-center py-4 mb-4">
    <h1>Carpintería Profesional</h1>
    <p class="lead">Productos destacados</p>
  </header>
  <main class="container mb-5">
    <section class="row justify-content-center">
      <% products.forEach(product => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="/images/<%= product.imagen %>" class="card-img-top" alt="<%= product.nombre %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.nombre %></h5>
              <p class="card-text text-success fw-bold"><%= product.precio %></p>
              <a href="/producto/<%= product.id %>" class="btn btn-primary mt-auto">Ver detalles</a>
            </div>
          </div>
        </div>
      <% }) %>
    </section>
  </main>
  <footer class="bg-dark text-white text-center py-3 fixed-bottom">
    <p class="mb-0">&copy; <%= new Date().getFullYear() %> Carpintería Profesional</p>
  </footer>
  <script src="/bootstrap.bundle.min.js"></script>
</body>
</html> 